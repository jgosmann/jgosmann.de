---
import type { ImageMetadata } from 'astro';
import { getImage } from 'astro:assets';

interface Props {
    leadTitle: string;
    title: string;
    background?: ImageMetadata;
}

const { leadTitle, title, background } = Astro.props;

const breakpoints = {
    sm: 320, md: 640, lg: 1280, xl: 2560
}

const getBackgroundImages = async () => {
    if (background) {
        return Object.fromEntries(await Promise.all(Object.entries(breakpoints).map(async ([key, breakpoint]) => {
            const img = await getImage({
                src: background,
                width: breakpoint,
                fit: 'inside',
            })
            return [`bg-${key}`, `url(${img.src})`]
        })))
    } else {
        return Object.fromEntries(Object.keys(breakpoints).map(key => [`bg-${key}`, "none"]))
    }
}
const backgroundCssVars = await getBackgroundImages()

---

<section>
    <div class="flyin">
        <h3><small>{leadTitle}</small><br />{title}</h3>
        <slot />
    </div>
</section>

<style define:vars={{ ...breakpoints, ...backgroundCssVars }} lang="scss">
    section {
        padding: 64px 32px;
        
        @media screen and (min-height: 600px) {
            &>div {
                min-height: 400px;
            }
        }

        background-image: var(--bg-sm);
        background-attachment: fixed;
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        
        &:nth-child(odd) {
            background-color: var(--col-pale-blue);
        }

        @media screen and (min-width: 320px) {
            background-image: var(--bg-md);
        }

        @media screen and (min-width: 640px) {
            background-image: var(--bg-lg);
        }

        @media screen and (min-width: 1280px) {
            background-image: var(--bg-xl);
        }

        @media screen and (-webkit-min-device-pixel-ratio: 2),
                screen and (min-resolution: 192dpi),
                screen and (min-resolution: 2dppx) {
            background-image: var(--bg-md);

            @media screen and (min-width: 640px) {
                background-image: var(--bg-lg);
            }

            @media screen and (min-width: 1280px) {
                background-image: var(--bg-xl);
            }
        }
    }
</style>
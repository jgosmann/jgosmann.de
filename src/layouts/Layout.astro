---
import BaseLayout from './BaseLayout.astro';
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
    <slot />
    <Footer />
  </body>
</BaseLayout>

<script>
  import { enableFlyIn } from "../scripts/flyin";

  // FIXME is this necessary? If so extract function
  // Is the logic correct? loading vs interactive, load vs DOMContentReady
  if (document.readyState === "loading") {
    window.addEventListener("load", enableFlyIn);
  } else {
    enableFlyIn();
  }
</script>

<noscript>
  <style is:inline>
    .flyin > h3,
    .flyin > p,
    .flyin > li {
      opacity: 1;
      transform: none;
    }
  </style>
</noscript>

<style lang="scss" is:global>
  h3,
  p,
  .group {
    padding: 8px;
    background-color: var(--col-translucent);
  }

  .group p,
  .group h3 {
    padding: 0;
    background-color: transparent;
  }

  p {
    max-width: 600px;
  }

  small {
    font-size: 0.8em;
  }

  @mixin flyin-transition {
    opacity: 0;
    transition: 0.5s;
    transition-timing-function: ease-out;
  }

  @media not (prefers-reduced-motion) {
    .flyin {
      & > h3 {
        @include flyin-transition;
        transform: translate(-150px, 0px);
      }
      & > p,
      & > li {
        @include flyin-transition;
        transform: translate(0, 150px);
      }
    }

    .flyin.flyin-show {
      & > h3,
      & > p,
      & > li {
        opacity: 1;
        transform: none;
      }
    }
  }
</style>
